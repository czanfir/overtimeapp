<tr>
  <td><%= post.id %></td>
  <td><%= post.date %></td>
  <td><%= post.overtime_request %></td>
  <td><%= post.user.full_name %></td>
  <td><%= link_to truncate(post.rationale), post %></td>
  <td><%= status_badge post.status %></td>
  <td>
    <%= link_to fa_icon('pencil-square-o'), edit_post_path(post), id: "edit_#{post.id}", class: 'index-icons' if policy(post).update? %>
  </td>
  <td>
    <%= link_to fa_icon('trash'), post_path(post), method: :delete, id: "delete_post_#{post.id}_from_index", class: 'glyphicon glyphicon-trash index-icons', data: {confirm: 'Are you sure?'} %>
  </td>
</tr>
