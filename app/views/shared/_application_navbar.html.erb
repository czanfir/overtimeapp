<% if current_user %>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <%= link_to(image_tag("bootstrap-solid.svg", size: "30x30", class: "d-inline-block align-top"), root_path, class: "navbar-brand") %>
    <b><%= link_to "Overtime Application", root_path, class: "nav-link" %></b>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item <%= active?(root_path) %>">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item <%= active?(posts_path) %>">
          <%= link_to "Time Entries", posts_path, class: "nav-link" %>
        </li>
        <li class="nav-item <%= active?(audit_logs_path) %>">
          <%= link_to "Audit Log", audit_logs_path, class: "nav-link" %>
        </li>
        <li class="nav-item <%= active?(new_post_path) %>">
          <%= link_to "Add New Entry", new_post_path, class: "nav-link", id: 'new_post_from_nav' %>
        </li>
      </ul>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <%=current_user.full_name%>
            <br>
            <%= current_user.user_type%>
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown" style="right: 0; left: auto;">
            <% if admin_user? %>
              <%= link_to "Admin Dashboard", admin_root_path, class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
            <% end %>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      </ul>

    </div>
  </nav>
<% end %>